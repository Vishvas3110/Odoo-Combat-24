<odoo>
    <data>
    <record id="product_template_form_view_extend" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <span class="d-inline-block">
                        <field name="rental_ok"/>
                        <label for="rental_ok"/>
                    </span>
                </xpath>
                <xpath expr="//page[@name='purchase']" position="after">
                    <page string="Rental" name="rental" invisible="not rental_ok">
                        <field name="product_rental_price_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="duration_id" required="1"/>
                                <field name="price" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
